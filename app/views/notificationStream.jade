extends layout

block notificationStream
  - var fuzzIncrements = 15
    div#notificationStreamHeader.pure-u-1-2
        h2 Notifications

    div#notificationStream.pure-u-1-3
        for notification in notifications
            div.notification
                h4#notificationTitle #{notification.title}
                if (15 * (Math.floor(notification.fuzzytime / fuzzIncrements))) != 0
                  h5 Happening in about #{15 * (Math.floor(notification.fuzzytime / fuzzIncrements))} minutes.
                else
                  h5 Happening soon!
                p#notificationDescription #{notification.description}

            br
