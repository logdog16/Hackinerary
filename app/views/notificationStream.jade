extends layout

block notificationStream
  div#notificationStreamHeader.pure-u-1-2
    h2 Notifications
    
  div#notificationStream.pure-g
    for notification in notifications
      div.pure-u-1-3.notification
        h4#notificationTitle #{notification.title}
        h5#notificationTime Happening in about #{notification.fuzzytime} minutes.
        p#notificationDescription #{notification.description}
          
        br
      
      div.pure-u-1-3
        br
